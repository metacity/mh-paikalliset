<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fillViewport="true" >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/background"
        android:gravity="left"
        android:paddingBottom="10dp"
        tools:context=".MainActivity"
        tools:ignore="MergeRootFrame" >

        <Button
            android:id="@+id/startLocateBtn"
            style="@android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/startText"
            android:layout_below="@+id/startText"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/swapBtn"
            android:background="@drawable/button_white_orange_shadowed"
            android:drawableLeft="@drawable/ic_locate"
            android:minHeight="30dp"
            android:minWidth="0dp"
            android:padding="2dp"
            android:text="@string/locate"
            android:textAlignment="gravity"
            android:textAllCaps="true"
            android:textColor="@color/dark_grey"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/swapBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/startFavouritesBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:src="@drawable/ic_swap" />

        <Button
            android:id="@+id/startFavouritesBtn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/startLocateBtn"
            android:layout_alignLeft="@+id/startText"
            android:layout_alignTop="@+id/startLocateBtn"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/swapBtn"
            android:background="@drawable/button_white_orange_shadowed"
            android:drawableLeft="@drawable/ic_favourites"
            android:padding="2dp"
            android:text="@string/favourites"
            android:textAllCaps="true"
            android:textColor="@color/dark_grey"
            android:textSize="12sp" />

        <Button
            android:id="@+id/endLocateBtn"
            style="@android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/timeText"
            android:layout_alignRight="@+id/startLocateBtn"
            android:layout_toRightOf="@+id/swapBtn"
            android:background="@drawable/button_white_orange_shadowed"
            android:drawableLeft="@drawable/ic_locate"
            android:minHeight="30dp"
            android:minWidth="0dp"
            android:padding="2dp"
            android:text="@string/locate"
            android:textAlignment="gravity"
            android:textAllCaps="true"
            android:textColor="@color/dark_grey"
            android:textSize="12sp" />

        <Button
            android:id="@+id/endFavouritesBtn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/startFavouritesBtn"
            android:layout_alignRight="@+id/startFavouritesBtn"
            android:layout_below="@+id/endText"
            android:layout_marginTop="3dp"
            android:background="@drawable/button_white_orange_shadowed"
            android:drawableLeft="@drawable/ic_favourites"
            android:minHeight="30dp"
            android:padding="2dp"
            android:text="@string/favourites"
            android:textAllCaps="true"
            android:textColor="@color/dark_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/endText"
            android:layout_below="@+id/endFavouritesBtn"
            android:layout_marginTop="50dp"
            android:layout_toLeftOf="@+id/swapBtn"
            android:background="@drawable/selector_grey_orange_borders"
            android:drawableLeft="@drawable/ic_time"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:inputType="time"
            android:longClickable="false"
            android:minHeight="40dp" >

            <requestFocus />
        </TextView>

        <TextView
            android:id="@+id/fromText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/startText"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/from"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/toText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/endText"
            android:layout_alignLeft="@+id/endFavouritesBtn"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/to"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="16sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/endText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/startText"
            android:layout_alignRight="@+id/startText"
            android:layout_below="@+id/swapBtn"
            android:background="@drawable/selector_grey_orange_borders"
            android:drawableLeft="@drawable/ic_end_pin"
            android:ellipsize="middle"
            android:ems="10"
            android:hint="@string/inputHint"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="45dp"
            android:paddingTop="5dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/timeText"
            android:layout_alignRight="@+id/endText"
            android:layout_toRightOf="@+id/swapBtn"
            android:background="@drawable/selector_grey_orange_borders"
            android:drawableLeft="@drawable/ic_date"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:inputType="date"
            android:longClickable="false"
            android:minHeight="40dp" />

        <AutoCompleteTextView
            android:id="@+id/startText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/fromText"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_grey_orange_borders"
            android:drawableLeft="@drawable/ic_start_pin"
            android:ellipsize="middle"
            android:ems="10"
            android:hint="@string/inputHint"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="45dp"
            android:paddingTop="5dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/whenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dateText"
            android:layout_alignLeft="@+id/fromText"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/when"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/startClearBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/startText"
            android:layout_alignRight="@+id/startLocateBtn"
            android:layout_alignTop="@+id/startText"
            android:background="@null"
            android:src="@drawable/ic_clear_text"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/endClearBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/endFavouritesBtn"
            android:layout_alignRight="@+id/endLocateBtn"
            android:layout_alignTop="@+id/endText"
            android:background="@null"
            android:src="@drawable/ic_clear_text"
            android:visibility="invisible" />

        <Button
            android:id="@+id/findRoutesBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/advancedOptionsLayout"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/toggleAdvancedBtn"
            android:background="@drawable/button_blue_orange_shadowed"
            android:fontFamily="sans-serif-condensed"
            android:minHeight="50dp"
            android:text="@string/findRoutes"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/toggleAdvancedBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/findRoutesBtn"
            android:layout_alignTop="@+id/findRoutesBtn"
            android:layout_toRightOf="@+id/toText"
            android:background="@drawable/button_blue_orange_shadowed"
            android:minWidth="45dip"
            android:src="@drawable/ic_menu_later" />

        <include
            android:id="@+id/advancedOptionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/timeText"
            android:layout_alignRight="@+id/dateText"
            android:layout_below="@+id/timeText"
            android:layout_marginTop="25dp"
            layout="@layout/advanced_options"
            android:visibility="gone" />

    </RelativeLayout>

</ScrollView>
