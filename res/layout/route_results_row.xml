<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_pressed_selector"
    android:padding="10dp" >
    
    <TextView
        android:id="@+id/departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="depTime"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="durTime"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="arrTime"
        android:textSize="12sp"
        android:textStyle="bold"
		android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/walkingDist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/duration"
        android:layout_centerHorizontal="true"
        android:text="[PH]"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/stopDep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/departure"
        android:layout_below="@+id/departure"
        android:text="(06:43)"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/stopArr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/arrival"
        android:layout_below="@+id/arrival"
        android:text="(08:43)"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="11sp" />

    <LinearLayout
        android:id="@+id/routeStepsLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/walkingDist"
        android:layout_centerHorizontal="true"
        android:padding="5dp" >

    </LinearLayout>

</RelativeLayout>