<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MarginContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <RelativeLayout
        android:id="@+id/routeRowLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_white_orange_bordered"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/stopDep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/departure"
            android:layout_below="@+id/departure"
            android:drawableLeft="@drawable/bus_stop_icon"
            android:fontFamily="sans-serif-condensed"
            android:text=" 06:43"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/dark_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/stopArr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/arrival"
            android:layout_below="@+id/duration"
            android:drawableRight="@drawable/bus_stop_icon"
            android:fontFamily="sans-serif-condensed"
            android:text="08:43 "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/dark_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/arrival"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:text="durTime"
            android:textColor="@color/dark_grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="07:67"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/walkingDist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/stopDep"
            android:layout_centerHorizontal="true"
            android:drawableRight="@drawable/ic_walk_icon"
            android:fontFamily="sans-serif-light"
            android:text="[PH]"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/dark_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="11:01"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/routeStepsLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/stopArr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="5dp" >

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>