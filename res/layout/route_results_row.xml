<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector_orange"
    android:gravity="center_horizontal"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/departureTimesLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="depTime"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stopDep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="(06:43)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="durTime"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/walkingDist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/duration"
        android:layout_centerHorizontal="true"
        android:text="[PH]"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/routeStepsLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/walkingDist"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="5dp" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/arrivalTimesLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/routeStepsLayout"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:text="arrTime"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stopArr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="(08:43)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>